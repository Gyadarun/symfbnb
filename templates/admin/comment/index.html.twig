{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires{% endblock %}

{% block body %}
    <div class="containter-fluid">
        <h1 class="my-5">Administration des commentaires</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Autheur</th>
                    <th>Commentaire</th>
                    <th>Note</th>
                    <th>Annonce</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for comment in pagination.data %}
                <tr>
                    <td>{{comment.id}}</td>
                    <td>{{comment.createdAt | date('d/m/Y')}}</td>
                    <td>
                        <img src="{{comment.author.picture}}" class="avatar avatar-micro" alt="">
                        {{comment.author.fullName}}
                    </td>
                    <td>{{comment.content}}</td>
                    <td>{{comment.rating}}</td>
                    <td>{{comment.ad.title}}</td>
                    <td>
                        <a href="{{path('admin_comment_edit', {'id': comment.id})}}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="{{path('admin_comment_delete', {'id': comment.id})}}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    
        {{pagination.display()}}

    </div> 
{% endblock %}
