{% extends 'base.html.twig' %}

{% block title %}Nos annonces{% endblock %}

{% block body %}

<div class="container">

    <div class="alert alert-dismissible alert-secondary text-center">
        <strong>Rechercher parmi nos annonces</strong>
    </div>

    {{form_start(form)}}
    <div class="form-row">
        <div class="col">
        {{form_row(form.minPrice)}}
        </div>
        <div class="col">
        {{form_row(form.maxPrice)}}
        </div>
        <div class="col">
        <button class="btn btn-primary container-fluid"type="submit">Chercher</button>
        </div>
    </div>
    {{form_end(form)}}

    <h1 class="my-5 text-center">Voici la listes des annonces proposées par nos hôtes</h1>
    <div class="row">
        {% for ad in ads %}
            {% include "ad/_ad.html.twig" %}
        {% endfor %}
    </div>
</div>

{% endblock %}
