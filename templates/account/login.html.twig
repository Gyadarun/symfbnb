{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <h1>Connectez-vous</h1>

            {% if hasError %}
                <div class="alert alert-danger">
                    L'email et le mot de passe ne correspondent pas 
                </div>
            {% endif %}

            <form action="{{path('account_login')}}" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email" value="{{useremail}}">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" placeholder="Mot de passe" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Se connecter</button>
                </div>
            </form>
        </div>
    </div>  
</div>   
{% endblock %}
