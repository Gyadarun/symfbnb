{% extends 'base.html.twig' %}

{% block title %}Réserver l'annonce : {{ad.title}}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Réserver pour l'annonce : {{ad.title}}</h1>
        <p>Vous etes sur le point de réserver le bien de {{ad.author.fullName}}</p>

    {{form_start(form)}}
        <div class="alert alert-light">
            <h2>Dites-nous les dates qui vous intéressent, on s'occupe du reste</h2>
            <div class="row">
                <div class="col">
                {{form_row(form.startDate)}}
                </div>
                <div class="col">
                {{form_row(form.endDate)}}
                </div>
            </div>
        </div>
        <h4>Montant du séjour : <span id="amount">...</span>&euro;</h4>
        <span id="days">0</span> nuit(s) à {{ad.price}} / nuit

        <h2>Avez-vous un commentaire ?</h2>
        {{form_row(form.comment)}}

        <h2>Vous avez terminé !</h2>
        <button type="submit" class="btn btn-success">Je réserve !</button>
    {{form_end(form)}}    
    </div>
{% endblock %}
